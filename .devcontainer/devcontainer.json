// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-outside-of-docker
{
	"name": "Inner Circle Environment",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/base:ubuntu-24.04",
	"onCreateCommand": "helm plugin install https://github.com/databus23/helm-diff --version=3.14.1 --verify=false && helm plugin install https://github.com/aslafy-z/helm-git --version 1.5.1 --verify=false",
	"features": {
		"ghcr.io/devcontainers/features/docker-outside-of-docker:1.6.5": {
			"version": "29.1.2",
			"enableNonRootDocker": "true",
			"moby": "true"
		},
		"ghcr.io/devcontainers/features/git:1.2.0": {
			"ppa": true,
			"version": "os-provided"
		},
		"ghcr.io/devcontainers/features/kubectl-helm-minikube:1.2.2": {
			"version": "1.33.1",
			"helm": "4.0.2",
			"minikube": "none"
		},
		"ghcr.io/mpriscella/features/kind:1.0.1": {
			"version": "v0.30.0"
		},
		"ghcr.io/devcontainers-extra/features/helmfile:1.0.0": {
			"version": "v1.2.2"
		},
		// to be able to edit yaml files in bash scripts conviniently using yq
		"ghcr.io/eitsupi/devcontainer-features/jq-likes:2.1.1": {
			"jqVersion": "none",
			"yqVersion": "4.45.1",
			"gojqVersion": "none",
			"xqVersion": "none"
		}
	},
	// Use this environment variable if you need to bind mount your local source code into a new container.
	"remoteEnv": {
		"LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder}"
	},
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],
	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "docker --version",
	// Configure tool-specific properties.
	// "customizations": {},
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// this was needed for kind to be able to create the cluster https://github.com/kubernetes-sigs/kind/issues/3196
	"remoteUser": "root",
	// to be able to call host OS network services
	"runArgs": [
		"--network=host",
		"--env-file",".devcontainer/devcontainer.env"
	],
	// this tells kind where to look for the default config
	"containerEnv": {
		"KUBECONFIG": "/workspaces/inner-circle-env/.inner-circle-cluster-kubeconfig"
	},
	// this is to prevent the k8s cluster container from pausing when closing VSCode
	"shutdownAction": "none"
}